<Window x:Class="Wpf_ITStaffManager.Views.InputEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_ITStaffManager"
        mc:Ignorable="d"
        Title="Add/Edit Employee" Height="326" Width="800">
    <StackPanel Margin="20">
        <TextBlock Text="First Name:"/>
        <TextBox x:Name="FirstNameTextBox" Margin="0,5"/>

        <TextBlock Text="Last Name:"/>
        <TextBox x:Name="LastNameTextBox" Margin="0,5"/>

        <TextBlock Text="Position:"/>
        <TextBox x:Name="PositionTextBox" Margin="0,5"/>

        <TextBlock Text="Department:"/>
        <TextBox x:Name="DepartmentTextBox" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Save" Width="100" Click="Save_Click"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
